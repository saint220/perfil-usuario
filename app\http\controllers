<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;
use Illuminate\Support\Facades\Hash;
use Illuminate\Support\Facades\Storage;

class ProfileController extends Controller
{
    public function edit()
    {
        // Usuário fake pra teste sem login
        $user = (object)[
            'id' => 1,
            'name' => 'Usuário Teste',
            'email' => 'teste@email.com',
            'profile_photo' => null,
        ];

        return view('profile.edit', compact('user'));
    }

    public function update(Request $request)
    {
        // Usuário fake pra teste
        $user = (object)[
            'id' => 1,
            'name' => 'Usuário Teste',
            'email' => 'teste@email.com',
            'profile_photo' => null,
        ];

        $request->validate([
            'name' => 'required|string|max:255',
            'email' => 'required|string|email|max:255',
            'password' => 'nullable|string|min:6|confirmed',
            'profile_photo' => 'nullable|image|mimes:jpg,jpeg,png|max:2048',
        ]);

        $user->name = $request->name;
        $user->email = $request->email;

        if ($request->filled('password')) {
            $user->password = Hash::make($request->password);
        }

        if ($request->hasFile('profile_photo')) {
            $photo = $request->file('profile_photo');
            $photoName = time() . '.' . $photo->getClientOriginalExtension();
            $photo->storeAs('public/profile_photos', $photoName);
            $user->profile_photo = $photoName;
        }

        // Não salva no banco, é só teste

        return redirect()->route('profile.edit')->with('success', 'Perfil atualizado com sucesso!');
    }

    public function removePhoto(Request $request)
    {
        // Usuário fake pra teste
        $user = (object)[
            'id' => 1,
            'profile_photo' => $request->old_photo ?? null,
        ];

        if ($user->profile_photo) {
            Storage::disk('public')->delete('profile_photos/'.$user->profile_photo);
            $user->profile_photo = null;
        }

        return back()->with('success', 'Foto de perfil removida com sucesso.');
    }
}
